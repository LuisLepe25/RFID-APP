<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PruebaAPP.AdminUsuarios"
             Title="Administracion de Usuarios">
    <StackLayout>

        <StackLayout VerticalOptions="Center" >
            <ActivityIndicator 
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                IsVisible="{Binding Cargando}"
                IsRunning="{Binding Cargando}"/>
        </StackLayout>
        <!-- 
        <ActivityIndicator
            IsVisible="True"
            IsRunning="True"
            Color="Black"/>
        -->
        <ListView x:Name="LstUsuarios">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding ID}" TextColor="Black"></Label>
                            <Label Text="{Binding RFID}" TextColor="Black"></Label>
                            <Label Text="{Binding Nombre}" TextColor="Black"></Label>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
