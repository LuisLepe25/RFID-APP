<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PruebaAPP.EditarUsuario"
             Title="Editar Usuario">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblID" Text="ID:"/>
            <Entry x:Name="txtID" Placeholder="Ingrese el nuevo ID" Keyboard="Numeric" Text="{Binding ID}" IsEnabled="False"/>
            <Label Text="Nombre:"/>
            <Entry x:Name="txtNombre" Placeholder="Ingrese el nuevo nombre" Text="{Binding Nombre}"/>
            <Label Text="RFID:"/>
            <Entry x:Name="txtRFID" Placeholder="Ingrese el nuevo RFID" Keyboard="Numeric" Text="{Binding RFID}"/>

            <Button x:Name="btnGuardar" Text="Crear" Clicked="btnGuardar_Clicked" IsVisible="False"/>
            <Button x:Name="btnEditar" Text="Editar" Clicked="btnEditar_Clicked" />
            <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>